page {
  height: 100%;
  background: #eee;
  width: 100%;
  overflow: hidden;
}

.content {
  width: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
  box-sizing: border-box;
}

.banner {
  background: #fff;
  padding: 0 10px;
  overflow: hidden;
}

.banner-img {
  width: 100%;
  /* border-radius: 10px; */
}

.devList {
  background: #eee;
  height: 400rpx;
  flex: 1 1 auto;
  padding: 20rpx;
}

.devItem {
  width: 46%;
  float: left;
  height: 350rpx;
  box-sizing: border-box;
  /* padding: 2% 0; */
  position: relative;
  background: #fafafa;
  margin-bottom: 10px;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
.lifeTime{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border: 5px solid #eee;
  border-radius: 50%;
  width: 240rpx;
  height: 240rpx;
}
.text {
  font-size: 12px;
  color: #80848f;
  display: inline-block;
  padding: 10rpx;
  border: 1px solid #f1f1f1;
  border-radius: 6rpx;
}

.devItem:nth-child(2n) {
  margin-left: 2%;
}

.avatar {
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}

.online {
  position: absolute;
  top: 10px;
  right: 10px;
}

.online image {
  width: 16px;
  height: 16px;
}

.addDev {
  text-align: center;
  font-size: 12px;
}

.scan {
  display: inline-block;
  width: 100%;
  font-size: 14px;
  margin-bottom: 5px;
  border-radius: 30px;
  height: 100rpx;
  background: #d4d3db;
  line-height: 100rpx;
}

.iptCid {
  font-size: 14px;
  line-height: 30px;
}
