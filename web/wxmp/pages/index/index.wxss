.avatar_box{
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30px;
  margin: 0 20px 20px;
  border-bottom: 1px solid #d3d4d5;
}
.avatar{
  width: 100px;
  height: 100px;
  border-radius: 100%;
  background: #b2b2b2;
}
.text{
  padding: 20px 0;
}
.btn{
  border-radius: 30px;
}
.authUserInfo {
  display: flex;
  align-items: center;
  font-size: 20px;
  color: #2b2f40;
  margin: 0 10rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  margin-left: 6.4%;
  border-radius: 50%;
}

